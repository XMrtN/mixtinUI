---
import SidebarItem from "./SidebarItem.astro";

const { pathname } = Astro.url;
---

<div class="py-4 md:hidden">
  <button>Hola</button>
</div>

<aside
  class="fixed z-40 max-md:top-0 max-md:left-0 w-64 h-screen max-md:bg-white dark:max-md:bg-gray-900 -translate-x-full transition-transform md:translate-x-0 pb-16"
>
  <div class="h-full py-8 max-md:p-6 pr-4 overflow-y-auto">
    <ul class="space-y-6 font-medium">
      <li>
        <button
          type="button"
          class="flex items-center w-full p-2 text-base text-gray-900 transition duration-75 rounded-lg group hover:bg-gray-100 dark:text-white dark:hover:bg-gray-700 md:hidden"
          aria-controls="dropdown-example"
          data-collapse-toggle="dropdown-example"
        >
          <svg
            class="w-3.5 h-3.5 ml-auto rotate-45"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 18 18"
          >
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 1v16M1 9h16"></path>
          </svg>
        </button>
        <a
          href="/docs/"
          class:list={[
            pathname === "/docs/"
              ? "text-sky-500 dark:text-sky-400"
              : "opacity-75 hover-active:opacity-100",
          ]}>Documentation</a
        >
      </li>
      <li>
        <h5 class="flex items-center">Components</h5>

        <ul
          class="mt-3 space-y-2 border-l border-gray-200 dark:border-gray-800"
        >
          {
            ["Accordions", "Buttons", "Tabs"].map((item) => (
              <SidebarItem id={item} />
            ))
          }
        </ul>
      </li>
    </ul>
  </div>
</aside>
