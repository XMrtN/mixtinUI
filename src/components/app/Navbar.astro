---
import Section from "./Section.astro";
import ThemeToggle from "./ThemeToggle.astro";

const { class: className, ...rest } = Astro.props;
---

<Section
  class:list={["flex items-center justify-between gap-2", className]}
  {...rest}
>
  <a href="/" class="text-2xl font-semibold tracking-wide">MixtinUI</a>

  <nav class="flex items-center justify-center gap-x-6 font-medium">
    <a
      href="/docs/"
      class="hover-active:text-sky-500 dark:hover-active:text-sky-400"
    >
      Docs
    </a>
    <ThemeToggle />
  </nav>
</Section>
