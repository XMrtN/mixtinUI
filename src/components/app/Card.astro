---
import ArrowRight from "../icons/arrow-right.astro";

const { id, ...rest } = Astro.props;
---

<div
  class="relative flex w-full flex-wrap items-center justify-center rounded-md border border-neutral-300 px-2 py-12 dark:border-neutral-700"
  {...rest}
>
  {
    id && (
      <a
        href={id}
        class="absolute right-2 top-2 rounded-md p-1 hover:bg-neutral-200 dark:hover:bg-neutral-800"
      >
        <ArrowRight />
      </a>
    )
  }
  <slot />
</div>
