---
import ArrowRight from "../icons/arrow-right.astro";

const { id, ...rest } = Astro.props;
---

<div
  class="w-full px-2 py-12 border rounded-md relative flex justify-center items-center border-gray-300 dark:border-gray-700"
  {...rest}
>
  {
    id && (
      <a
        href={id}
        class="m-2 p-1 absolute top-0 right-0 hover-active:bg-gray-200 dark:hover-active:bg-gray-500/10 rounded-md"
      >
        <ArrowRight />
      </a>
    )
  }
  <slot />
</div>
