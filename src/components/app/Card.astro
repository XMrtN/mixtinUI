---
import ArrowRight from "../icons/arrow-right.astro";

const { id, ...rest } = Astro.props;
---

<div
  class="relative flex w-full items-center justify-center rounded-md border border-gray-300 px-2 py-12 dark:border-gray-700"
  {...rest}
>
  {
    id && (
      <a
        href={id}
        class="absolute right-2 top-2 rounded-md p-1 hover-active:bg-gray-200 dark:hover-active:bg-gray-500/10"
      >
        <ArrowRight />
      </a>
    )
  }
  <slot />
</div>
