---
import ArrowRight from "../icons/arrow-right.astro";

const { id, class: className, ...rest } = Astro.props;
---

<div
  class:list={[
    "relative flex w-full flex-wrap items-center justify-center rounded-md border border-neutral-900/10 px-2 py-12 dark:border-neutral-100/10",
    className,
  ]}
  {...rest}
>
  {
    id && (
      <a
        href={id}
        class="absolute right-2 top-2 rounded-md p-1 hover:bg-neutral-900/5 dark:hover:bg-neutral-200/5"
      >
        <ArrowRight />
      </a>
    )
  }
  <slot />
</div>
