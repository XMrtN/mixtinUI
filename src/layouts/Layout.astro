---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html
  lang="en-US"
  class="scroll-smooth [color-scheme:light] [scrollbar-gutter:stable] data-[astro-transition]:scroll-auto dark:[color-scheme:dark]"
>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/webp" href="/logo.webp" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta
      name="description"
      content="Implement modern components in your code without dependencies."
    />
    <meta
      name="keywords"
      content="components, web design, ui components, javascript, react, tailwindcss, css, library"
    />
    <meta property="og:locale" content="en-US" />
    <meta property="og:type" content="website" />
    <meta
      property="og:title"
      content="A component library without dependencies. - MixtinUI"
    />
    <meta property="og:site_name" content="MixtinUI" />
    <meta property="og:url" content="https://mixtin-ui.vercel.app/" />
    <meta
      property="og:description"
      content="Implement modern components in your code without dependencies."
    />
  </head>
  <body
    class="min-h-dvh bg-white bg-[url('/bg-gradient.svg')] bg-top text-neutral-900 dark:bg-neutral-900 dark:text-neutral-200 [&_h1]:text-balance [&_h2]:text-balance [&_h3]:text-balance [&_h4]:text-balance [&_p]:text-pretty"
  >
    <slot />
  </body>
</html>
