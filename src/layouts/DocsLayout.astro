---
import Footer from "@/components/app/Footer.astro";
import Navbar from "@/components/app/Navbar.astro";
import Section from "@/components/app/Section.astro";
import Sidebar from "@/components/app/Sidebar.astro";
import Layout from "../layouts/Layout.astro";
import NavbarBrand from "@/components/app/NavbarBrand.astro";

const { title } = Astro.props;
---

<Layout title={(title || "Get Started") + " - MixinUI"}>
  <Navbar />
  <Section class="relative overflow-hidden">
    <Sidebar variant="aside" />
    <NavbarBrand
      isBig
      class="fixed left-1/2 top-1/2 -z-10 -mt-16 -translate-x-1/2 -translate-y-1/2 opacity-10"
    />

    <div class="py-8 sm:ml-64 sm:pl-4">
      <slot />

      <Footer class="-mx-4" />
    </div>
  </Section>
</Layout>
